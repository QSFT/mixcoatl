#!/usr/bin/env python

import os, time, argparse
from mixcoatl.admin.account import Account
from prettytable import PrettyTable

if __name__ == '__main__':
    """ List accounts. Right now just returns the ID and name of the account"""
    start = time.time()
    parser = argparse.ArgumentParser()
    parser.add_argument("--verbose", "-v", help="Produce verbose output", action="store_true")

    group_two = parser.add_mutually_exclusive_group()
    group_two.add_argument('--json', action='store_true', help='print API response in JSON format.')
    group_two.add_argument('--xml', action='store_true', help='print API response in XML format.')

    cmd_args = parser.parse_args()

    accounts = Account.all()

    if cmd_args.verbose:
        for account in accounts:
            account.pprint()
    else:
        if cmd_args.xml is True or cmd_args.json is True:
            if cmd_args.xml is True:
                payload_format = "xml"
            else:
                payload_format = "json"

            print utils.print_format(volumes, payload_format)
        else:
            table = PrettyTable(["Account ID", "Account Name", "Default Budget", "Status"])
            for r in accounts['accounts']:
                table.add_row([
                    r['accountId'],
                    r['name'],
                    r['defaultBudget'],
                    r['status']])
            table.align = 'l'
            print(table)

    if 'DCM_DEBUG' in os.environ:
        print 'Results returned in', time.time()-start, 'seconds.'